<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Color user</title>
        <script src="socket.io/socket.io.js"></script>
        <script src="jquery.js"></script>
        <script>
            var socket = io("http://localhost:8000");
            
            socket.on("server-send-color", function(data){
                console.log(data);
                $("body").attr("bgColor", data);
            });


            $(document).ready(function(){
                $("#box1").click(function(){
                    socket.emit("client-send-data","blue");
                });
                $("#box2").click(function(){
                    socket.emit("client-send-data","green");
                });
                $("#box3").click(function(){
                    socket.emit("client-send-data","yellow");
                });
            });
        </script>
        <style>
            #box1 {
                width: 100px;
                height: 100px;
                background-color: blue;
            }
            #box2 {
                width: 100px;
                height: 100px;
                background-color: green;
            }
            #box3 {
                width: 100x;
                height: 100px;
                background-color: yellow;
            }
        </style>
    </head>
    <body bgColor="pink">
                <div id="box1"></div>
                <div id="box2"></div>
                <div id="box3"></div>
    </body>
</html>